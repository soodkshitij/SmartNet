 #foreach( $comment in $comments )
<div class="comment-container already-comment-container" style="padding-left:40px;border:0;padding-top:0px;padding-bottom:5px;">
	<div class="author" style="color: #6F7681;">
		<span>$comment.get("first_name")&nbsp;$comment.get("last_name")</span>
	</div>
	<div class="message content-body" data-comment-id="$comment.get("id")" style=" white-space: pre-wrap;margin-bottom:5px;">$comment.get("content")</div>
</div>
#end